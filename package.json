{
  "name": "renderer",
  "private": true,
  "version": "0.1.0-alpha.0",
  "description": "Web components renderer",
  "license": "MIT",
  "scripts": {
    "publish": "lerna publish",
    "postinstall": "ts-node scripts/postinstall.ts"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "ts-node scripts/verifyCommit.ts"
  },
  "devDependencies": {
    "@umijs/fabric": "^2.3.0",
    "chalk": "^3.0.0",
    "is-ci": "^3.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.0.8",
    "prettier": "^2.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.2.3",
    "yorkie": "^2.0.0"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.js?(x)": [
      "prettier --write"
    ],
    "packages/*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "engines": {
    "node": ">=12",
    "pnpm": ">=5"
  }
}
