{
  "name": "renderer",
  "private": true,
  "version": "0.1.0-alpha.0",
  "description": "Web components renderer",
  "license": "MIT",
  "scripts": {
    "publish": "lerna publish",
    "postinstall": "ts-node scripts/postinstall.ts"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "ts-node scripts/verifyCommit.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.13.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@types/babel__core": "^7.1.10",
    "@types/babel__preset-env": "^7.9.0",
    "@types/gulp": "^4.0.6",
    "@types/gulp-uglify": "^3.0.6",
    "@umijs/fabric": "^2.3.0",
    "chalk": "^3.0.0",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-prettier": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "is-ci": "^3.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.0.8",
    "prettier": "^2.1.0",
    "rollup": "^2.26.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.2.3",
    "yorkie": "^2.0.0"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.js?(x)": [
      "prettier --write"
    ],
    "packages/*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "engines": {
    "node": ">=12",
    "pnpm": ">=5"
  }
}
