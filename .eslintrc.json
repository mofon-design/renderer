{
  "root": true,
  "parser": "babel-eslint-parser",
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["import", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "rules": {
    "global-require": "error",
    "no-console": "error",
    "no-empty": "off",
    "no-unused-vars": "error",
    "no-var": "error",
    "prefer-const": "error",
    "prettier/prettier": "error",
    "import/no-dynamic-require": "error",
    "import/no-extraneous-dependencies": "error"
  },
  "settings": {},
  "overrides": [
    {
      "files": "scripts/**/*",
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": "packages/wc-bundler/**/*",
      "rules": {
        "global-require": "off",
        "no-console": "off",
        "import/no-dynamic-require": "off"
      }
    },
    {
      "files": "packages/*/bin/**/*",
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": "packages/*/test/**/*",
      "env": {
        "jest": true
      }
    }
  ]
}
